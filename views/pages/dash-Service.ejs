<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jop</title>
    <%- include('../partials/dash-head'); %> 
    <style>


        #success {
            padding: 8px 16px;
            margin: 5px;
            background-color: #4cae4c;
            color: #fff;
            border: none;    
            outline: none;
            border-radius: 5px;
        }
          </style>
</head>
<body>
    <%- include('../partials/dash-nav'); %>  
    
    <div class="container-fluid shadow " >
        <div class="row ">
      
            <%- include('../partials/dash-sliderbar'); %>
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
               
                <h1 class="h2">Service</h1>
                  
                <div class="row">
                    <div class="col-12 col-xl-8 mb-4 mb-lg-0">
                        <div class="card shadow ">
                            <h5 class="card-header d-flex justify-content-between">Latest Update <button type="button" class="btn btn-sm " data-bs-toggle="modal" data-bs-target="#Course"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                              <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
                            </svg></button></h5>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                          <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Service Name</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">icon</th>
                                           
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% if(Service.length) { 
                            
                                            for(var i=0;i<Service.length;i++) { %>
                                              <tr>
                                                    <td>
                                                        <%=(i+1) %>
                                                    </td>
                                                    <td>
                                                        <%=Service[i].Service_name %>
                                                    </td>
                                                    <td>
                                                        <%=Service[i].Link %>
                                                    </td>
                                                    <td>
                                                    <%=Service[i].icon %>
                                                     
                                                    
                                                    </td>
                                                    <td  >
                                           
                                            <td><button type="button" class="btn btn-sm " style="color:rgb(41, 204, 155);" data-bs-toggle="modal" data-bs-target="#EditeService<%=Service[i]._id%>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square " viewBox="0 0 16 16">
                                              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                            </svg></button></td>
                                           
                                            <td> <a href="/delete_Service/<%= Service[i]._id %>" > <button id="success">Active</button></a></td>
                                          </tr>
                                          <!-- Modal Edit Education -->
     <div class="modal fade" id="EditeService<%=Service[i]._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
          <div class="modal-content p-3">
              <div class="modal-header">
                  <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Service</h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <form class="row g-3 needs-validation" action="/edit_Service" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%=Service[i]._id%>">
                    
                      <div class="col-12">
                          <label for="Name" class="form-label">Service_name</label>
                          <input type="text" name="Service_name" class="form-control rounded-pill" id="university" placeholder="Drow"value="<%=Service[i].Service_name%>">
                      </div>
                      <div class="col-12">
                          <label for="Year" class="form-label">lINK</label>
                          <input type="text" class="form-control rounded-pill" id="Year"name="Link" placeholder="Link"value="<%=Service[i].Link%>">
                      </div>
                      <div class="col-12">
                          <label for="company" class="form-label">icon</label>
                          <input  type="text"  class="form-control rounded-pill" id="company"name="icon" placeholder="company"value="<%=Service[i].icon%>">
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                  </form>
              </div>
            
          </div>
      </div>
  </div>  
  <% } }else{ %>
                                    <tr>
                                        <td colspan="5">Ù„NO Scoial</td>
                                    </tr>

                                    <%} %> 
                                       
                                        </tbody>
                                      </table>
                                </div>
                                <a href="#" class="btn btn-block btn-light">View all</a>
                            </div>
                        </div>
                    </div>
                   
                </div>
               
                
           
        </div>
    </div>
  </main>



     <!-- Modal Add Education -->
     <div class="modal fade" id="Course" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
          <div class="modal-content p-3">
              <div class="modal-header">
                  <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Service</h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <form class="row g-3 needs-validation" action="add_Service" method="post" enctype="multipart/form-data">
                   
                    
                      <div class="col-12">
                          <label for="Name" class="form-label">Service_name</label>
                          <input type="text" name="Service_name" class="form-control rounded-pill" id="university" placeholder="Drow" >
                      </div>
                      <div class="col-12">
                          <label for="Link" class="form-label">lINK</label>
                          <input type="text" class="form-control rounded-pill" id="Link"name="Link" placeholder="Link">
                      </div>
                      <div class="col-12">
                          <label for="company" class="form-label">icon</label>
                          <input  type="text"  class="form-control rounded-pill" id="company"name="icon" placeholder="company">
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                  </form>
              </div>
            
          </div>
      </div>
  </div>
  <script >

let btnSuccess = document.querySelector('#success');

btnSuccess.addEventListener('click', () => btnSuccess.style.backgroundColor = '#c9302c')
  </script>
  <%- include('../partials/dash-script'); %>  
 
</body>

</html>